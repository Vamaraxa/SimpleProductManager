{% extends '/base.html.twig' %}
{% block body  %}
<table class="table table-striped table-light">
    <thead>
        <tr>
            <th colspan='5'>
                <h1>Published</h1>
            </th>
        </tr>
        <tr>
            <th>No</th>
            <th>Number</th>
            <th>Name</th>
            <th>Price gross/Price net/Vat</th>
            <th>Description</th>
        </tr>
    </thead>
    <tbody>
    {% for product in products %}
        <tr>
            <td>{{ loop.index }}</td>
            <td>{{ product.number }}</td>
            <td>{{ product.name }}</td>
            <td>{{ product.price|number_format(2) }}/{{ product.priceNet|number_format(2) }}/{{ product.vat|number_format(2) }}</td>
            <td>{{ product.description }}</td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% endblock %}
